    <form class="form-horizontal" action="" method="post" enctype="multipart/form-data">
        <fieldset>

            <!-- Form Name -->
            <legend>舉行活動</legend>

            <input type="hidden" name="ActivityId" value="@Model.ActivityId" />
            <input type="hidden" name="Username" value="@Model.UserName" />
            <input type="hidden" name="UserId" value="@Model.UserId" />
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="Title">活動標題</label>
                <div class="col-md-5">
                    <input id="Title" name="Title" type="text" placeholder="活動標題" class="form-control input-md" value="@Model.Title">

                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="Data">活動日期</label>
                <div class="col-md-5">
                    <input id="DateTime" name="DateTime" type="text" placeholder="YYYY/MM/DD" class="form-control input-md" value="@Model.DateTime">
                    <span class="help-block">格式:年/月/日</span>
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="Location">活動地點</label>
                <div class="col-md-6">
                    <input id="Location" name="Location" type="text" placeholder="活動地點" class="form-control input-md" value="@Model.Location">
                    <span class="help-block">請輸入詳細地點</span>
                </div>
            </div>

            <!-- Textarea -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="Paragraphy">活動內文</label>
                <div class="col-md-4">
                    <textarea rows="10" cols="100" class="form-control" id="Paragraphy" name="Paragraphy" placeholder="描述活動內容">@Model.Paragraphy</textarea>
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="PersonLimitation">人數限制</label>
                <div class="col-md-4">
                    <input id="PersonLimitation" name="PersonLimitation" type="text" placeholder="輸入人數限制" class="form-control input-md" value="@Model.PersonLimitation">
                    <span class="help-block">無人數限制填寫0</span>
                </div>
            </div>

            <!-- File Button -->

            <div class="form-group">
                <label class="col-md-4 control-label" for="Photo">宣傳照片</label>
                <div class="col-md-4">
                    <input id="photo" name="photo" class="input-file" type="hidden" value="@Model.ServerPath">
                    <img src="~/images/@Model.ServerPath" alt="Alternate Text" />
                </div>
            </div>


            <input id="Participation" name="Participation" type="hidden" value="0" class="form-control input-md">

            <!-- Button (Double) -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="submit"></label>
                <div class="col-md-8">
                    <button id="submit" name="submit" class="btn btn-info">確認送出</button>
                    <a href="~/Home/Vip" id="cancel" name="cancel" class="btn btn-danger">取消編輯</a>
                </div>
            </div>





        </fieldset>
    </form>







